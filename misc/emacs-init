
(add-hook 'text-mode-hook 'turn-on-auto-fill)
(setq-default auto-fill-function 'do-auto-fill)


(add-to-list 'load-path "/home/pet/.emacs.d/muse-latest/lisp")

(require 'muse-mode)     ; load authoring mode
